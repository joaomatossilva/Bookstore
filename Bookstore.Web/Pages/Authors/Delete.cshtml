@page
@model Bookstore.Web.Pages.Authors.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model.HasBooks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model.HasBooks)
        </dd>
    </dl>

    @if (!Model.Model.HasBooks)
    {
        <form method="post">
            <input type="hidden" asp-for="Command.Id"/>
            <input type="submit" value="Delete" class="btn btn-danger"/> |
        </form>
    }
    else
    {
        <p class="alert-danger">Can't delete this Author because it has book associated.</p>
    }
    <a asp-page="./Index">Back to List</a>
</div>
